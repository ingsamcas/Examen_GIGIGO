<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:left="0dp"
        android:top="0dp"
        android:width="15dp"
        android:height="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">
            <padding
                android:top="0dp"/>

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    <item android:left="0dp"
        android:gravity="left"
        android:width="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    <item android:left="0dp"
        android:gravity="bottom"
        android:width="15dp"
        android:height="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>

    <!--Bracket derecho-->

    <item android:gravity="end"
        android:width="15dp"
        android:height="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">
            <padding
                android:top="0dp"/>

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    <item android:left="0dp"
        android:gravity="end"
        android:width="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    <item
        android:gravity="bottom|end"
        android:width="15dp"
        android:height="2dp">
        <shape
            android:shape="rectangle"
            android:thickness="20dp">

            <solid
                android:width="5dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>



</layer-list>