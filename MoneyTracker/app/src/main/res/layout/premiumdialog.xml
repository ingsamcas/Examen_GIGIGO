<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="@dimen/premiumdialog_height"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/premiumdialog_image"
                    android:layout_alignParentStart="true"
                    android:layout_width="190dp"
                    android:layout_height="190dp"

                    />
                <eclipseapps.android.customviews.TextViewRoboto
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/premiumdialog_titulo"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:robotofont="Roboto_Black"
                    android:layout_marginRight="5dp"
                    android:text="PREMIUM"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="20sp"/>
                <eclipseapps.android.customviews.TextViewRoboto
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/premiumdialog_precio"
                    android:layout_below="@+id/premiumdialog_titulo"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:robotofont="Roboto_Thin"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/common_google_signin_btn_text_light"/>
                <eclipseapps.android.customviews.TextViewRoboto
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/premiumdialog_okButton"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/premiumdialog_cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    app:robotofont="RobotoCondensed_Bold"
                    android:textColor="@color/colorPrimary"

                    android:textSize="16sp"/>
                <eclipseapps.android.customviews.TextViewRoboto
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/premiumdialog_cancelButton"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    app:robotofont="RobotoCondensed_Bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>
