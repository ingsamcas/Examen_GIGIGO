<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="60dp"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/e_eventounico_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        custom:cardBackgroundColor="@android:color/white"
        custom:cardCornerRadius="15dp"
        custom:cardElevation="@dimen/detalles_cardelevation"
        custom:cardPreventCornerOverlap="false"
        custom:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_filter_list_white_24dp_press"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>