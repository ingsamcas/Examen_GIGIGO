<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/fragment_movementslistelemnt_elemnt">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/movslistelement_margintop"
                android:clipChildren="false">

                <RelativeLayout
                    android:id="@id/movementlist_descripcion_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/marginleft_description">

                    <TextView
                        android:id="@+id/nativeads_title"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Title"/>
                    <TextView
                        android:id="@+id/nativeads_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elegantTextHeight="true"
                        android:ellipsize="end"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:maxLines="6"
                        android:text="Descripcion"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/nativeads_cta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:elegantTextHeight="true"
                        android:ellipsize="end"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:maxLines="6"
                        android:text="cta"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/detalles"
                    android:layout_width="@dimen/circle_dim"
                    android:layout_height="@dimen/circle_dim"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/circle_marginbottom"
                    android:layout_marginLeft="@dimen/circle_marginleftRigth"
                    android:layout_marginRight="@dimen/circle_marginleftRigth"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="@dimen/radius"
                    card_view:cardElevation="@dimen/detalles_cardelevation"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/nativeads_canvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="@dimen/circle_dim_overview"
                    android:layout_height="@dimen/circle_dim_overview"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/circle_marginbottom"
                    android:layout_marginLeft="@dimen/circle_marginleft"
                    android:translationZ="10dp">

                    <FrameLayout
                        android:id="@+id/movementlist_fotoscontenedor"
                        android:layout_width="@dimen/movslistelement_subcircles"
                        android:layout_height="@dimen/movslistelement_subcircles"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:id="@+id/movementlist_fotosfondo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/photos_icon" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/nativeads_icon"
                                android:layout_width="@dimen/listviewelement_subcircle_imagesize_width"
                                android:layout_height="@dimen/listviewelement_subcircle_imagesize_height"
                                android:layout_centerInParent="true"
                                android:background="@android:color/white" />
                        </RelativeLayout>
                    </FrameLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</com.google.android.gms.ads.formats.NativeContentAdView>