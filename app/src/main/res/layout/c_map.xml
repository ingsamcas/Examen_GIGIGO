<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/c_container"
    xmlns:card="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardElevation="10dp"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/c_general">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_image_container"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="3dp"
                        android:layout_alignParentStart="true"
                        android:id="@+id/c_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:transitionName="shared_image"
                        android:src="@drawable/places_ic_search"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_counter_images"
                        android:layout_below="@+id/c_image"
                        android:layout_alignEnd="@id/c_image"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <TextView
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/c_image_container"
                    android:layout_alignParentTop="true"
                    android:id="@+id/c_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:transitionName="shared_name"/>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/c_image_container"
                    android:layout_below="@+id/c_name"
                    android:id="@+id/c_reviews_container">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/c_rating"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_margin="3dp"
                        android:text="ReseÃ±as>"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_reviews"
                        android:visibility="invisible"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/c_vicinity"
                    android:layout_toRightOf="@id/c_image_container"
                    android:layout_below="@+id/c_reviews_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:typeface="sans"
                    android:transitionName="shared_adress"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/c_progressBar"/>
            </RelativeLayout>

            <View

                android:layout_below="@+id/c_general"
                android:id="@+id/c_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_below="@+id/c_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/c_share">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share_black_24dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compartir en redes sociales"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/c_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</android.support.constraint.ConstraintLayout>